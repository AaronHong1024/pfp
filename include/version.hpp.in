#ifndef version_hpp
#define version_hpp

namespace vcfbwt
{

struct Version
{
    static constexpr char VCFBWT_GIT_BRANCH[] = "@GIT_BRANCH@";
    static constexpr char VCFBWT_GIT_COMMIT_HASH[] = "@GIT_COMMIT_HASH@";
    static constexpr std::size_t VCFBWT_MAJOR = @VERSION_MAJOR@;
    static constexpr std::size_t VCFBWT_MINOR = @VERSION_MINOR@;
    static constexpr std::size_t VCFBWT_PATCH = @VERSION_PATCH@;
    
    static void print()
    {
        std::cout
        << VCFBWT_GIT_BRANCH << ":"
        << VCFBWT_GIT_COMMIT_HASH << ":"
        << " "
        << VCFBWT_MAJOR << "." << VCFBWT_MINOR << "." << VCFBWT_PATCH
        << std::endl;
        
        exit(0);
    }
};

}

#endif //version_hpp